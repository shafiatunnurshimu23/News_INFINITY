<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/channel_select_bg"
    android:orientation="vertical"
    tools:context=".WatchVideoActivity">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@color/card_bg"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="bottom|center">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/app2"/>
        <ImageView
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:src="@drawable/backlinks"/>
        <ImageView
            android:layout_width="105dp"
            android:layout_height="120dp"
            android:src="@drawable/tv_channels"/>


    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Linking with news channels"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"/>
    </LinearLayout>

</LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Channel"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/CNN"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/cnn_logopng"
                        android:background="@color/white"
                        />


                    <ImageView
                        android:id="@+id/FoxNews"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/foxnews"
                        android:layout_weight="1"
                        android:background="@color/white"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/MSNBC_news"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/msbnbc"
                        android:background="@color/white"
                        />

                    <ImageView
                        android:id="@+id/BBC_news"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/bbc_news"
                        android:layout_weight="1"
                        android:background="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/alzazeera_news"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/alzazeera"
                        android:background="@color/white"
                        />

                    <ImageView
                        android:id="@+id/sky_news"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/sky_news"
                        android:background="@color/white"
                        />
                </LinearLayout>

</LinearLayout>
 </ScrollView>
</LinearLayout>